<div class="row" ng-controller="LoginCtrl">
    {{#if login}}
    <div class="form-signin col-xs-6 col-xs-offset-3">
        <form name="registerForm" ng-submit="Login()">
            <h2 class="form-signin-heading">Please login</h2>
            <div ng-class="{ 'has-error' : registerForm.username.$invalid && !registerForm.username.$pristine }">
                <input name="username" ng-model="User.username" class="form-control" placeholder="Username" required />
                <span ng-show="registerForm.username.$invalid && !registerForm.username.$pristine" class="help-block">X</span>
            </div>
            <div ng-class="{ 'has-error' : registerForm.password.$invalid && !registerForm.password.$pristine }">
                <input type="password" name="password" ng-model="User.password" class="form-control" placeholder="Password" required />
                <span ng-show="registerForm.password.$invalid && !registerForm.password.$pristine" class="help-block">X</span>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            <a href="/register">Don't have an account ?</a>
        </form>
        <span id="response"></span>
    </div>
    {{/if}}
    {{#if register}}
    <div class="form-signin col-xs-6 col-xs-offset-3">
        <form name="registerForm" ng-submit="Register()">
            <h2 class="form-signin-heading">Signup</h2>
            <div ng-class="{ 'has-error' : registerForm.name.$invalid && !registerForm.name.$pristine }">
                <input name="name" ng-model="User.name" class="form-control" placeholder="Name" autofocus="autofocus" required />
                <span ng-show="registerForm.name.$invalid && !registerForm.name.$pristine" class="help-block">X</span>
            </div>
            <div ng-class="{ 'has-error' : registerForm.username.$invalid && !registerForm.username.$pristine }">
                <input name="username" ng-model="User.username" class="form-control" placeholder="Username" required />
                <span ng-show="registerForm.username.$invalid && !registerForm.username.$pristine" class="help-block">X</span>
            </div>
            <div ng-class="{ 'has-error' : registerForm.email.$invalid && !registerForm.email.$pristine }">
                <input type="email" name="email" ng-model="User.email" class="form-control" placeholder="Email" required />
                <span ng-show="registerForm.email.$invalid && !registerForm.email.$pristine" class="help-block">X</span>
            </div>
            <div ng-class="{ 'has-error' : registerForm.password.$invalid && !registerForm.password.$pristine }">
                <input type="password" name="password" ng-model="User.password" class="form-control" placeholder="Password" required />
                <span ng-show="registerForm.password.$invalid && !registerForm.password.$pristine" class="help-block">X</span>
            </div>
            <div ng-class="{ 'has-error' : registerForm.pass2.$invalid && !registerForm.pass2.$pristine }">
                <input type="password" name="pass2" ng-model="User.pass2" class="form-control" placeholder="Confirm Password" />
                <span ng-show="registerForm.pass2.$invalid && !registerForm.pass2.$pristine" class="help-block">X</span>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            <a href="/login">Have an account ?</a>
        </form>
        <span id="response"></span>
    </div>
    {{/if}}
</div>